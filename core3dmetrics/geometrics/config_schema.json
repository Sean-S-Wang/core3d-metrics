{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "name": "geometrics configuration schema",
   "definitions": {
      "CLSMatchValue": {
        "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 256
            },
            {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 256
              }
            }
          ]
      },
      "CLSMatchValueArrayOf": {
        "oneOf": [
          {
            "type": "integer",
            "minimum": 0,
            "maximum": 256
          },
          {
            "type": "array",
            "items": {
              "$ref": "#/definitions/CLSMatchValue"
            }
          }
        ]
      }
   },


   "type": "object",
   "required": [
      "INPUT.REF",
      "INPUT.TEST",
      "OPTIONS",
      "PLOTS",
      "MATERIALS.REF"
   ],
   "additionalProperties": false,
   "properties": {
      "INPUT.REF": {
         "type": "object",
         "required": [
            "DSMFilename",
            "DTMFilename",
            "CLSFilename",
            "NDXFilename",
            "CLSMatchValue"
         ],
         "optional": [
            "MTLFilename"
         ],
         "additionalProperties": false,
         "properties": {
            "DSMFilename": {
               "type": "string"
            },
            "DTMFilename": {
               "type": "string"
            },
            "CLSFilename": {
               "type": "string"
            },
            "NDXFilename": {
               "type": "string"
            },
            "MTLFilename": {
               "oneOf": [
                  {
                     "type": "string"
                  }, 
                  {
                     "type": "null"
                  }
               ]
            },

           "CLSMatchValue": {
              "$ref": "#/definitions/CLSMatchValueArrayOf"
            }
         }
      },      
      "INPUT.TEST": {
         "type": "object",
         "required": [
            "DSMFilename",
            "CLSFilename",
            "CLSMatchValue"
         ],
         "optional": [
            "ImagePairFilename",
            "ImagePairDataFilename"
         ],
         "additionalProperties": false,
         "properties": {
            "DSMFilename": {
               "type": "string"
            },
            "DTMFilename": {
               "oneOf": [
                  {
                     "type": "string"
                  }, 
                  {
                     "type": "null"
                  }
               ]
            },
            "CLSFilename": {
               "type": "string"
            },
            "ImagePairFilename": {
               "oneOf": [
                  {
                     "type": "string"
                  },
                  {
                     "type": "null"
                  }
               ]
            },
             "ImagePairDataFilename": {
               "oneOf": [
                  {
                     "type": "string"
                  },
                  {
                     "type": "null"
                  }
               ]
            },
            "MTLFilename": {
               "oneOf": [
                  {
                     "type": "string"
                  }, 
                  {
                     "type": "null"
                  }
               ]
            },
            "CLSMatchValue": {
              "$ref": "#/definitions/CLSMatchValueArrayOf"
            }

         }
      },
      "OPTIONS": {
         "type": "object",
         "required": [
            "QuantizeHeight"
         ],
        "optional": [
            "AlignModel",
            "SaveAligned"
         ],
         "additionalProperties": false,
         "properties": {
            "QuantizeHeight": {
              "type": "boolean"
            },
           "AlignModel": {
              "type": "boolean"
            },
            "SaveAligned": {
              "type": "boolean"
            },
            "TerrainZErrorThreshold": {
              "type": "number"
            },
           "TerrainCLSIgnoreValues": {
                "$ref": "#/definitions/CLSMatchValue"
            }
         }
      },
      "OBJECTWISE": {
          "type": "object",
          "optional": [
              "Enable",
              "MergeRadius"
         ],
		 "additionalProperties": false,
         "properties": {
           "Enable": {
             "type": "boolean"
           },
           "MergeRadius": {
             "type": "number"
           }
         }
      },
      "PLOTS": {
          "type": "object",
          "required": [
              "ShowPlots",
              "SavePlots"
         ],
		 "additionalProperties": false,
         "properties": {
           "ShowPlots": {
             "type": "boolean"
           },
           "SavePlots": {
             "type": "boolean"
           }
         }
      },
      "MATERIALS.REF": {
         "type": "object",
         "required": [
            "MaterialNames",
            "MaterialIndicesToIgnore"
         ],
         "additionalProperties": true,
         "properties": {
            "MaterialNames": {
               "type": "array",
               "items": {
                  "type": "string"
               }
            },
            "MaterialIndicesToIgnore": {
               "oneOf": [
                  {
                     "type":"integer",
                     "minimum": 0
                  },
                  {
                     "type": "array",
                     "items": {
                        "type": "integer",
                        "minimum": 0
                     }
                  }
               ]
            }
         }
      },
      "REGEXEPATH": {
         "type": "object",
         "additionalProperties": false,
         "properties": {
            "Align3DPath": {
               "type": "string"
            }
         }
      }
   }
}
