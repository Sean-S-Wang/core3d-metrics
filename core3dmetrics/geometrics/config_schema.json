{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "name": "geometrics configuration schema",
   "type": "object",
   "required": [
      "INPUT.REF",
      "INPUT.TEST",
      "OPTIONS",
      "PLOTS",
      "MATERIALS.REF"
   ],
   "additionalProperties": false,
   "properties": {
      "INPUT.REF": {
         "type": "object",
         "required": [
            "DSMFilename",
            "DTMFilename",
            "CLSFilename",
            "NDXFilename",
            "MTLFilename",
            "CLSMatchValue"
         ],
         "additionalProperties": false,
         "properties": {
            "DSMFilename": {
               "type": "string"
            },
            "DTMFilename": {
               "type": "string"
            },
            "CLSFilename": {
               "type": "string"
            },
            "NDXFilename": {
               "type": "string"
            },
            "MTLFilename": {
               "type": "string"
            },
            "CLSMatchValue": {
               "oneOf": [
                  {
                     "type":"integer",
                     "minimum": 0,
                     "maximum": 255
                  },
                  {
                     "type": "array",
                     "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                     }
                  }
               ]
            }
         }
      },      
      "INPUT.TEST": {
         "type": "object",
         "required": [
            "DSMFilename",
            "CLSFilename",
            "CLSMatchValue"
         ],
         "additionalProperties": false,
         "properties": {
            "DSMFilename": {
               "type": "string"
            },
            "DTMFilename": {
               "oneOf": [
                  {
                     "type": "string"
                  }, 
                  {
                     "type": "null"
                  }
               ]
            },
            "CLSFilename": {
               "type": "string"
            },
            "MTLFilename": {
               "oneOf": [
                  {
                     "type": "string"
                  }, 
                  {
                     "type": "null"
                  }
               ]
            },
            "CLSMatchValue": {
               "oneOf": [
                  {
                     "type":"integer",
                     "minimum": 0,
                     "maximum": 255
                  }, 
                  {
                     "type": "array",
                     "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                     }
                  }
               ]
            }
         }
      },
      "OPTIONS": {
         "type": "object",
         "required": [
            "QuantizeHeight"
         ],
         "additionalProperties": false,
         "properties": {
            "QuantizeHeight": {
              "type": "boolean"
            },
            "TerrainZErrorThreshold": {
              "type": "number"
            }
         }
      },
      "PLOTS": {
          "type": "object",
          "required": [
              "ShowPlots",
              "SavePlots"
         ],
		 "additionalProperties": false,
         "properties": {
           "ShowPlots": {
             "type": "boolean"
           },
           "SavePlots": {
             "type": "boolean"
           }
         }
      },
      "MATERIALS.REF": {
         "type": "object",
         "required": [
            "MaterialNames",
            "MaterialIndicesToIgnore"
         ],
         "additionalProperties": true,
         "properties": {
            "MaterialNames": {
               "type": "array",
               "items": {
                  "type": "string"
               }
            },
            "MaterialIndicesToIgnore": {
               "oneOf": [
                  {
                     "type":"integer",
                     "minimum": 0
                  },
                  {
                     "type": "array",
                     "items": {
                        "type": "integer",
                        "minimum": 0
                     }
                  }
               ]
            }
         }
      },
      "REGEXEPATH": {
         "type": "object",
         "additionalProperties": false,
         "properties": {
            "Align3DPath": {
               "type": "string"
            }
         }
      }
   }
}
